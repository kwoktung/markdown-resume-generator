{
  "name": "markdown",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "tsc --noEmit && next lint",
    "format": "prettier --write .",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply markdown-resume --local",
    "db:migrate:remote": "wrangler d1 migrations apply markdown-resume --remote",
    "reset": "wrangler d1 migrations reset markdown-resume",
    "secrets:bulk": "wrangler secret bulk .env"
  },
  "dependencies": {
    "@auth/d1-adapter": "^1.11.1",
    "@cloudflare/puppeteer": "^1.0.4",
    "@hono/zod-openapi": "^1.1.5",
    "@opennextjs/cloudflare": "^1.14.6",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@scalar/hono-api-reference": "^0.9.28",
    "@tanstack/react-query": "^5.90.12",
    "axios": "^1.13.2",
    "bignumber.js": "^9.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "lucide-react": "^0.561.0",
    "marked": "^17.0.1",
    "next": "15.4.8",
    "next-auth": "^5.0.0-beta.30",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-resizable-panels": "^3.0.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24.9.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "prettier": "3.7.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wrangler": "^4.54.0"
  }
}
